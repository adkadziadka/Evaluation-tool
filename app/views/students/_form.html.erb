<%= form_for [@batch, @student] do |f| %>
  <div class="form-group">
    <label>Student name</label>
    <%= f.text_field :full_name, placeholder: "Student name", class: "form-control" %>
  </div>

  <div class="form-group">
    <label>Picture</label>
    <%= f.url_field :picture, placeholder: "image url", class: "form-control" %>
  </div>

  <div class="form-group">
    <label>Batch number</label>
    <%= f.number_field :batch, placeholder: "", value: @batch.id, class: "form-control" %>
  </div>

  <div class="actions">
    <%= f.submit "Save", class: "btn btn-primary" %>
  </div>
<% end %>